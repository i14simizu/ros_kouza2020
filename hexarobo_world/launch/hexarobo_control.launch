<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find hexarobo_world)/config/controller.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager"
                type="spawner" ns="/hexarobo_s" output="screen" 
                args="diff_drive_controller"/>

  <rosparam command="load" file="$(find hexarobo_world)/config/controller.yaml" ns="/hexarobo_s" />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher"
                type="robot_state_publisher"
                respawn="false" output="screen" ns="/hexarobo_s">
  </node>

</launch>

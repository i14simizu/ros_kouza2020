    <xacro:macro name="asi_right" params="parent child xyz rpy">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="1 0 0"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/asi_1_blen_low.stl"/>
                </geometry>
                <material name="green"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/asi_1_blen_low_3_ad.stl"/>
                </geometry>
            </collision>
            <inertial>
				<origin xyz="0.0044845 -0.00563879 -0.00377687" rpy="0 0 0"/>
				<mass value="0.010706"/>
				<inertia ixx="0.000005401807" ixy="0.000000000185" ixz="0.000000000496" iyy="0.000003139093" iyz="-0.00000098431" izz="0.000002411247"/>
			</inertial>
        </link>
        <gazebo reference="${child}_link">
            <material>Gazebo/Green</material>
            <mu1 value="1.0" />
            <mu2 value="1.0" />
            <gravity>true</gravity>
        </gazebo>
    </xacro:macro>

    <link name="base_link"/>

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body_link"/>
        <origin xyz="0.0 0.0 0.05" rpy="0 0 0"/>
    </joint>
    <link name="body_link">
        <visual name="body">
            <geometry>
                <mesh filename="package://tokuken_robot_description/models/base/base_blen_low_3.stl"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://tokuken_robot_description/models/base/base_blen_low_3.stl"/>
            </geometry>
        </collision>
        <inertial>
            <origin xyz="-0.12003 0.0885733 0.024818" rpy="0 0 0"/>
            <mass value="0.323853"/>
			<inertia ixx="0.001101" ixy="-0.000000019489" ixz="-0.00000032811" iyy="0.001144" iyz="-0.00002903" izz="0.001950"/>
		</inertial>
    </link>
    <gazebo reference="body_link">
        <material>Gazebo/Blue</material>
        <mu1 value="1.0" />
        <mu2 value="1.0" />
        <gravity>true</gravity>
        <minDepth>0.001</minDepth>
    </gazebo>

    <xacro:crank_left parent="body_link" child="b_crank" xyz="-0.1623 0.1375 0.013"/>
    <xacro:crank_left parent="body_link" child="c_crank" xyz="-0.1623 0.0475 0.013"/>

    <xacro:crank_right parent="body_link" child="d_crank" xyz="-0.0777 0.0475 0.013"/>
    <xacro:crank_right parent="body_link" child="a_crank" xyz="-0.0777 0.1375 0.013"/>

    <xacro:asi_left parent="b_crank_link" child="b_asi_1" xyz="-0.015 ${0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(38)} 0 0"/>
    <xacro:asi_left parent="b_crank_link" child="b_asi_2" xyz="-0.033 0.0 -0.005" rpy="0 0 0"/>
    <xacro:asi_left parent="b_crank_link" child="b_asi_3" xyz="-0.051 ${-0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(-37)} 0 0"/>

    <xacro:asi_left parent="c_crank_link" child="c_asi_1" xyz="-0.015 ${0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(38)} 0 0"/>
    <xacro:asi_left parent="c_crank_link" child="c_asi_2" xyz="-0.033 0.0 -0.005" rpy="0 0 0"/>
    <xacro:asi_left parent="c_crank_link" child="c_asi_3" xyz="-0.051 ${-0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(-37)} 0 0"/>

    <xacro:asi_right parent="a_crank_link" child="a_asi_1" xyz="0.015 ${0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(38)} 0 0"/>
    <xacro:asi_right parent="a_crank_link" child="a_asi_2" xyz="0.033 0.0 -0.005" rpy="0 0 0"/>
    <xacro:asi_right parent="a_crank_link" child="a_asi_3" xyz="0.051 ${-0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(-37)} 0 0"/>

    <xacro:asi_right parent="d_crank_link" child="d_asi_1" xyz="0.015 ${0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(38)} 0 0"/>
    <xacro:asi_right parent="d_crank_link" child="d_asi_2" xyz="0.033 0.0 -0.005" rpy="0 0 0"/>
    <xacro:asi_right parent="d_crank_link" child="d_asi_3" xyz="0.051 ${-0.005*sin(radians(60))} ${-0.005*cos(radians(60))}" rpy="${radians(-37)} 0 0"/>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
            <robotNamespace>/hekken</robotNamespace>
            <robotSimType>gazebo_ros_control/DefaultRobotHWSim</robotSimType>
            <legacyModeNS>true</legacyModeNS>
        </plugin>
    </gazebo>
</robot>

<robot name="hexa_robot" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro::macro name="crank_left" params="parent child xyz rpy">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="0 0 1"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/crank2_collide_ad_blen_low2.stl"/>
                </geometry>
                <material name="red">
                    <color rgba="1.0 0.0 0.0 2.0"/>
                <material>
            </visual>
        </link>
    </xacro::macro>

    <xacro::macro name="crank_right" params="parent child xyz rpy">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="0 0 1"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/model/base/crank1_collide_ad_blen_low2.stl"/>
                </geometry>
            <material name="red"/>
            </visual>
        </link>
    </xacro::macro>


<robot name="hekken" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="crank_left" params="parent child xyz">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="1 0 0"/>
            <limit velocity="10.0" effort="0.2" />
            <dynamics damping="0.1"/>
        </joint>
        <transmission name="${child}_move" type="SimpleTransmission">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="${child}_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="${child}_joint">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
        </transmission>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/crank2_lowp_ad_07.stl"/>
                </geometry>
                <material name="red">
                    <color rgba="1.0 0.0 0.0 2.0"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/crank2_lowp_ad_07.stl"/>
                </geometry>
            </collision>
            <inertial>
				<origin xyz="-0.037341 -0.000000002377 -0.002966" rpy="0 0 0"/>
				<mass value="0.111155"/>
				<inertia ixx="0.00001696" ixy="-0.000005133807" ixz="0.000000043631" iyy="0.00003475" iyz="-0.00002165" izz="0.00003573"/>
			</inertial>
        </link>
        <gazebo reference="${child}_link">
            <material>Gazebo/Red</material>
            <mu1 value="1.0" />
            <mu2 value="1.0" />
            <gravity>true</gravity>
            <minDepth>0.001</minDepth>
        </gazebo>
    </xacro:macro>

    <xacro:macro name="crank_right" params="parent child xyz">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="1 0 0"/>
            <limit velocity="10.0" effort="0.2" />
            <dynamics damping="0.1"/>
        </joint>
        <transmission name="${child}_move" type="SimpleTransmission">
            <type>transmission_interface/SimpleTransmission</type>
            <actuator name="${child}_motor">
                <mechanicalReduction>1</mechanicalReduction>
            </actuator>
            <joint name="${child}_joint">
                <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
            </joint>
        </transmission>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/crank1_lowp_ad_07.stl"/>
                </geometry>
                <material name="red"/>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/crank1_lowp_ad_07.stl"/>
                </geometry>
            </collision>
            <inertial>
				<origin xyz="0.037341 -0.000000002377 -0.002966" rpy="0 0 0"/>
				<mass value="0.111155"/>
				<inertia ixx="0.00001696" ixy="0.000005133807" ixz="-0.000000043631" iyy="0.00003475" iyz="0.00002165" izz="0.00003573"/>
			</inertial>
        </link>
        <gazebo reference="${child}_link">
            <material>Gazebo/Red</material>
            <mu1 value="1.0" />
            <mu2 value="1.0" />
            <gravity>true</gravity>
            <minDepth>0.001</minDepth>
        </gazebo>
    </xacro:macro>

    <xacro:macro name="asi_left" params="parent child xyz rpy">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="1 0 0"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/asi_2_blen_low.stl"/>
                </geometry>
                <material name="green">
                    <color rgba="0.0 0.0 1.0 2.0"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/asi_2_blen_low.stl"/>
                </geometry>
            </collision>
            <inertial>
				<origin xyz="-0.0045155 -0.00563879 -0.00377687" rpy="0 0 0"/>
				<mass value="0.010706"/>
				<inertia ixx="0.000005401807" ixy="0.000000000185" ixz="0.000000000496" iyy="0.000003139093" iyz="-0.00000098431" izz="0.000002411247"/>
			</inertial>
        </link>
        <gazebo reference="${child}_link">
            <material>Gazebo/Green</material>

<launch>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find tokuken_robot_description)/config/hekken_config.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/hekken" args="a_crank_joint_controller b_crank_joint_controller c_crank_joint_controller d_crank_joint_controller joint_state_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen" ns="/hekken"/>

</launch>

        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/model/base/asi_1_blen_low.stl"/>
                </geometry>
                <material name="green"/>
            </visual>
        </link>
    </xacro::macro>
</robot>
<robot name="hexa_robot" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="crank_left" params="parent child xyz">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="0 0 1"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/crank2_collide_ad_blen_low2.stl"/>
                </geometry>
                <material name="red">
                    <color rgba="1.0 0.0 0.0 2.0"/>
                </material>
            </visual>
        </link>
    </xacro:macro>

    <xacro:macro name="crank_right" params="parent child xyz">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="0 0 1"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/crank1_collide_ad_blen_low2.stl"/>
                </geometry>
                <material name="red"/>
            </visual>
        </link>
    </xacro:macro>

    <xacro:macro name="asi_left" params="parent child xyz rpy">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="1 0 0"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/asi_2_blen_low.stl"/>
                </geometry>
                <material name="green">
                    <color rgba="0.0 0.0 1.0 2.0"/>
                </material>
            </visual>
        </link>
    </xacro:macro>

    <xacro:macro name="asi_right" params="parent child xyz rpy">
        <joint name="${child}_joint" type="continuous">
            <origin xyz="${xyz}" rpy="${rpy}"/>
            <parent link="${parent}"/>
            <child link="${child}_link"/>
            <axis xyz="1 0 0"/>
        </joint>
        <link name="${child}_link">
            <visual>
                <geometry>
                    <mesh filename="package://tokuken_robot_description/models/base/asi_1_blen_low.stl"/>
                </geometry>
                <material name="green"/>
            </visual>
        </link>
    </xacro:macro>

    <link name="base_link"/>

    <joint name="body_joint" type="fixed">
        <parent link="base_link"/>
        <child link="body_link"/>
        <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
    </joint>
    <link name="body_link">
        <visual name="body">
            <geometry>
                <mesh filename="package://tokuken_robot_description/models/base/base_blen_low_3.stl"/>
            </geometry>
        </visual>
    </link>

    <xacro:crank_left parent="body_link" child="b_crank" xyz="-0.1623 0.1375 0.013"/>
    <xacro:crank_left parent="body_link" child="c_crank" xyz="-0.1623 0.0475 0.013"/>

    <xacro:crank_right parent="body_link" child="d_crank" xyz="-0.0777 0.0475 0.013"/>
    <xacro:crank_right parent="body_link" child="a_crank" xyz="-0.0777 0.1375 0.013"/>

    <!--TODO : xyz, rpy-->
    <xacro:asi_left parent="b_crank_link" child="b_asi_1" xyz="-0.1773 ${0.1375+0.005*sin(radians(30))} ${0.013-0.005*cos(radians(30))}" rpy="0 0 0"/>
</robot>